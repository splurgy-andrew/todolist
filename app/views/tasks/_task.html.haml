.task_title{:class => ("overdue" if task.overdue?)}
  = (task.completed ? "COMPLETED: " : "") + task.title
  .task_edit
    = link_to "edit", (edit_task_url :id => task.id)
  .task_delete
    = link_to "delete", task_path(task), :method => :delete
  .task_completed
    = link_to "completed", task_path(task, :task => {:completed => true}), :method => :put