.task_title{:class => task_class(task)}
  = task.title
.category category: #{task.category}
= link_to "edit", (edit_task_url :id => task.id), :class => "btn btn-small task_edit"
= button_to "delete", task, :method => :delete, :class => "btn btn-small task_delete"
= button_to "completed", task_path(task, :task => {:completed => true}), :method => :put, :class => "btn btn-small task_completed"