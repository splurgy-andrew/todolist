= form_for task, :validate => true, :html => {:class => "form-inline"} do |f|
  = f.label :title, "Title", :class => "control-label"
  = f.text_field :title

  = f.label :completed, "Completed", :class => "control-label"
  = f.check_box :completed

  = f.label :position, "Position", :class => "control-label"
  = f.text_field :position

  = f.label :due_date, "Due Date", :class => "control-label"
  = f.date_select :due_date, {:order => [:month, :day, :year]}

  = f.label :owner_id, "Owner", :class => "control-label"
  = f.select :owner_id, Owner.all.map { |o| [o.name, o.id] }

  = f.label :category, "Category", :class => "control-label"
  = f.select :category, :options => ["work", "personal"]

  - if @task.id?
    = submit_tag "Save Task", :class => "btn"
  - else
    = submit_tag "Add Task", :class => "btn"