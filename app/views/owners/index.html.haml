%h1 owners

%table.table#owner_table
  %thead
    %tr
      %th Name
      %th Email
      %th Actions
  %tbody
    - @owners.each do |owner|
      %tr
        %td= owner.name
        %td= owner.email
        %td
          = link_to 'Show', owner, :class => "btn btn-small"
          = link_to 'Edit', edit_owner_path(owner), :class => "btn btn-small"
          = link_to 'Delete', owner, :method => :delete, :class => "btn btn-small btn-delete", :remote => true, :'data-type' => 'json'
    %tr#new_owner_show.hidden
      %td#owner_name {NAME}
      %td#owner_email {EMAIL}
      %td
        = link_to 'Show', owner_path(:id => "_ID_"), :class => "btn btn-small"
        = link_to 'Edit', edit_owner_path(:id => "_ID_"), :class => "btn btn-small"
        = link_to 'Delete', owner_path(:id => "_ID_"), :method => :delete, :class => "btn btn-small btn-delete", :remote => true, :'data-type' => 'json'
    %tr#new_owner_add.hidden
      = form_for @owner, :validate => true, :html => {:class => 'form-inline', :'data-type' => 'json'}, :remote => true do |f|
        %td= f.text_field :name, :class => "input-small", :placeholder => "name"
        %td= f.text_field :email, :class => "input-small", :placeholder => "hi@example.com"
        %td= f.submit 'Add', :class => "btn btn-small"